<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scandi_bg">

    <!-- Scrollable content area -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_load"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding">

            <!-- Header -->
            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextTitleLarge"
                android:text="Setup"
                android:layout_marginBottom="@dimen/small_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/header_subtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:text="Configure memory blocks and processes for visualization"
                android:layout_marginBottom="@dimen/section_gap"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_title" />

            <!-- Memory Blocks -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_blocks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin_vertical"
                app:cardBackgroundColor="@color/scandi_surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/scandi_border"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header_subtitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextTitleMedium"
                        android:text="Memory Blocks"
                        android:layout_marginBottom="@dimen/section_gap" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_blocks"
                        style="@style/ScandiTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_blocks"
                        app:placeholderText="@string/hint_blocks"
                        app:helperText="@string/helper_blocks"
                        app:boxStrokeColor="@color/scandi_border"
                        app:hintTextColor="@color/scandi_text_muted"
                        app:hintEnabled="true"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_blocks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:paddingHorizontal="@dimen/section_gap"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:inputType="text"
                            android:textColor="@color/scandi_text_high"
                            android:textSize="@dimen/text_size_body" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Processes -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_processes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin_vertical"
                app:cardBackgroundColor="@color/scandi_surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/scandi_border"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_blocks">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextTitleMedium"
                        android:text="Process Queue"
                        android:layout_marginBottom="@dimen/section_gap" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_processes"
                        style="@style/ScandiTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/label_processes"
                        app:placeholderText="@string/hint_processes"
                        app:helperText="@string/helper_processes"
                        app:boxStrokeColor="@color/scandi_border"
                        app:hintTextColor="@color/scandi_text_muted"
                        app:hintEnabled="true"
                        app:hintAnimationEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/input_processes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:paddingHorizontal="@dimen/section_gap"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:inputType="text"
                            android:textColor="@color/scandi_text_high"
                            android:textSize="@dimen/text_size_body" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Strategy -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_strategy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/section_spacing"
                app:cardBackgroundColor="@color/scandi_surface"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/scandi_border"
                app:strokeWidth="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_processes">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextTitleMedium"
                        android:text="Strategy"
                        android:layout_marginBottom="@dimen/section_gap" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ScandiTextInput"
                        app:endIconMode="dropdown_menu"
                        app:boxStrokeColor="@color/scandi_border"
                        app:hintTextColor="@color/scandi_text_muted">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spinner_strategy"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/button_height_primary"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="@dimen/section_gap"
                            android:textColor="@color/scandi_text_high"
                            android:textSize="@dimen/text_size_body" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Error Message Card: now below Strategy within scroll content -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardBackgroundColor="@color/scandi_error"
                app:cardCornerRadius="@dimen/radius_md"
                app:cardElevation="@dimen/card_elevation_subtle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_strategy">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="@dimen/card_padding">

                    <ImageView
                        android:layout_width="@dimen/icon_size_medium"
                        android:layout_height="@dimen/icon_size_medium"
                        android:src="@drawable/ic_reset"
                        app:tint="@color/text_on_primary"
                        android:contentDescription="@string/cd_error_icon"
                        android:layout_marginEnd="@dimen/spacing_md" />

                    <TextView
                        android:id="@+id/text_error"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_on_primary"
                        android:textSize="@dimen/text_size_body" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Spacer to prevent overlap with bottom-anchored Load button -->
            <View
                android:id="@+id/content_bottom_spacer"
                android:layout_width="0dp"
                android:layout_height="@dimen/btn_min_height"
                app:layout_constraintTop_toBottomOf="@id/card_error"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/section_gap" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Bottom-anchored Primary Action -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_load"
        android:layout_width="0dp"
        android:layout_height="@dimen/btn_min_height"
        style="@style/ButtonPrimary"
        android:text="@string/action_load"
        app:icon="@drawable/ic_play"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/spacing_md"
        app:iconSize="@dimen/icon_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/section_gap"
        android:layout_marginEnd="@dimen/section_gap"
        android:layout_marginBottom="@dimen/section_gap" />

</androidx.constraintlayout.widget.ConstraintLayout>
