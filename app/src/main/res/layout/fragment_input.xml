<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memory and Processes" />

        <EditText
            android:id="@+id/input_blocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_blocks"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_processes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_processes"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_strategy" />

        <Spinner
            android:id="@+id/spinner_strategy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_load"
            android:contentDescription="Load memory and processes" />

        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error_text"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
