<resources>
    <!-- Base application theme. -->
    <style name="Theme.Memoryvisualizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/scandi_primary</item>
        <item name="colorPrimaryVariant">@color/scandi_primary_600</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/scandi_secondary</item>
        <item name="colorSecondaryVariant">@color/scandi_secondary</item>
        <item name="colorOnSecondary">@color/scandi_text_high</item>
        <item name="android:colorBackground">@color/scandi_bg</item>
        <item name="android:textColor">@color/scandi_text_high</item>
        <item name="colorSurface">@color/scandi_surface</item>
        <item name="colorOnSurface">@color/scandi_text_high</item>
        <item name="colorError">@color/scandi_error</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>