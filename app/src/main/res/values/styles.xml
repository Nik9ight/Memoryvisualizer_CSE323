<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Typography -->
    <style name="TextTitleLarge">
        <item name="android:textColor">@color/scandi_text_high</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextTitleMedium">
        <item name="android:textColor">@color/scandi_text_high</item>
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TextBody">
        <item name="android:textColor">@color/scandi_text_high</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>
    <style name="TextCaption">
        <item name="android:textColor">@color/scandi_text_muted</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="backgroundTint">@color/scandi_primary</item>
        <item name="rippleColor">@color/scandi_primary_600</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">@color/text_on_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/scandi_text_high</item>
        <item name="strokeColor">@color/scandi_border</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="iconTint">@color/scandi_text_high</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonOutlinedNeutral" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/scandi_text_muted</item>
        <item name="strokeColor">@color/scandi_border</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="iconTint">@color/scandi_text_muted</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonOutlinedDanger" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/scandi_error</item>
        <item name="strokeColor">@color/scandi_error</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="iconTint">@color/scandi_error</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="ButtonOutlinedPrimary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/scandi_primary</item>
        <item name="strokeColor">@color/scandi_primary</item>
        <item name="cornerRadius">@dimen/radius_md</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="iconTint">@color/scandi_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <!-- Inputs -->
    <style name="ScandiTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/scandi_surface</item>
        <item name="boxStrokeColor">@color/scandi_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/scandi_text_muted</item>
        <item name="helperTextTextColor">@color/scandi_text_muted</item>
        <item name="counterTextColor">@color/scandi_text_muted</item>
        <item name="startIconTint">@color/scandi_text_muted</item>
        <item name="endIconTint">@color/scandi_text_muted</item>
        <item name="shapeAppearance">@style/ShapeAppearance.MaterialComponents.SmallComponent</item>
    </style>
</resources>
