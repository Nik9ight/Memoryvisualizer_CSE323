<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memory and Processes" />

        <EditText
            android:id="@+id/input_blocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_blocks"
            android:inputType="text" />

        <EditText
            android:id="@+id/input_processes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_processes"
            android:inputType="text" />

        <Spinner
            android:id="@+id/spinner_algorithm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_allocate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_step" />

            <Button
                android:id="@+id/button_compact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_compact" />

            <Button
                android:id="@+id/button_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_reset" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/button_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_save"
                android:contentDescription="Save memory and processes" />

            <Button
                android:id="@+id/button_load"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/action_load"
                android:contentDescription="Load memory and processes" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_strategy" />

        <Spinner
            android:id="@+id/spinner_algorithm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/action_save"
            android:contentDescription="Save memory and processes" />

        <TextView
            android:id="@+id/text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/error_text"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
